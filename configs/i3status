general {
        colors = true
        interval = 7
        color_good = "#2AA198"
        color_bad = "#DC322F"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "memory"
order += "tztime local"

cpu_usage {
        format = " cpu  %usage "
}

memory {
        format = " ram %used / %available "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = " %d.%m. %H:%M "
}
